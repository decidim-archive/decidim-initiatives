<main class="wrapper">
  <div class="row">
    <div class="columns medium-10 large-8 small-12 medium-centered">
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title"><%= t '.title' %></h2>
        </div>

        <div class="card__content">
          <%= decidim_form_for(@form, url: next_wizard_path, method: :put, html: { class: "form new_initiative_form" }) do |f| %>
            <%= f.hidden_field :type_id %>

            <div class="section">
              <%= f.translated :text_field, :title, autofocus: true %>
            </div>

            <div class="section">
              <%= f.translated :text_area, :description %>
            </div>

            <div class="section">
              <%= f.label :signature_start_time do %>
                <%= f.date_field :signature_start_time, required: true %>
              <% end %>
            </div>

            <div class="section">
              <%= f.label :signature_end_time do %>
                <%= f.date_field :signature_end_time, required: true %>
              <% end %>
            </div>

            <div class="section">
              <%= f.submit t('.finish'), class: 'button expanded' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
