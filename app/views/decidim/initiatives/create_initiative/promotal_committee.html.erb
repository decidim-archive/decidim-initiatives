<% content_for :back_link do %>
  <%= link_to :back, class: 'muted-link' do %>
    <%= icon 'chevron-left', class: 'icon--small' %>
    <%= t('.back') %>
  <% end %>
<% end %>

<div class="row column">
  <div class="column large-6 medium-centered">
    <div class="callout secondary">
      <%=t '.individual_help_text' if current_initiative.created_by_individual? %>
      <%=t '.organization_help_text' unless current_initiative.created_by_individual? %>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="columns large-6 small-12 medium-centered">
    <%= render partial: 'share_committee_link' if current_initiative.created_by_individual? %>
    <%= render partial: 'organization_data' unless current_initiative.created_by_individual? %>
  </div>
</div>