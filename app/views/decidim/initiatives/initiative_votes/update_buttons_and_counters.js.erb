(function () {
  'use strict';

  var $initiativeVotesCount = $('#initiative-<%= initiative.id %>-votes-count'),
      userIdentitiesDialog = $('#user-identities'),
      refreshUrl;

  morphdom($initiativeVotesCount[0], '<%= j(render partial: 'decidim/initiatives/initiatives/votes_count', locals: { initiative: initiative }) %>');

  // Update the identities dialog, if exists.
  if (userIdentitiesDialog.length) {
    refreshUrl = userIdentitiesDialog.data('refresh-url');

    $.ajax(refreshUrl).done(function(response){
      userIdentitiesDialog.html(response);
    });
  } else {
    var $initiativeVoteButton = $('#initiative-<%= initiative.id %>-vote-cabin');
    morphdom($initiativeVoteButton[0], '<%= j(render partial: 'decidim/initiatives/initiatives/vote_cabin', locals: { initiative: initiative }) %>');
  }
}());
